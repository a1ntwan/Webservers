[Unit]
Description=PM2 is a daemon process manager that will help you manage and keep your application online
Documentation=https://github.com/Unitech/pm2
After=network.target

[Service]
Type=forking
{% if ansible_distribution_file_variety == 'RedHat' %}
ExecStart=/usr/bin/pm2 start %i --name {{ app_name }}
ExecStop=/usr/bin/pm2 stop {{ app_name }}
ExecReload=/usr/bin/pm2 reload {{ app_name }}
{% elif ansible_distribution_file_variety == 'Debian' %}
ExecStart=/usr/local/bin/pm2 start %i --name {{ app_name }}
ExecStop=/usr/local/bin/pm2 stop {{ app_name }}
ExecReload=/usr/local/bin/pm2 reload {{ app_name }}
{% endif %}
WorkingDirectory=/var/www/html/{{ project_name }}
KillMode=process
Restart=on-failure
RestartSec=42s

[Install]
WantedBy=multi-user.target
